<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#0000ff"
        android:gravity="bottom"
        android:padding="16dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_profile_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user.email@example.com"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:background="@drawable/rounded_edittext_bg"
        >

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/home"
            android:drawablePadding="16dp"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/nav_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/groups"
            android:drawablePadding="16dp"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/nav_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expenses"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/user"
            android:drawablePadding="16dp"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/nav_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analysis"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/chart"
            android:drawablePadding="16dp"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/settings"
            android:drawablePadding="16dp"
            android:background="@drawable/rounded_edittext_bg"/>
    </LinearLayout>
</LinearLayout>